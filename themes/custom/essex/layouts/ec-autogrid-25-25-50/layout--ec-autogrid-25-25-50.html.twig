{#
/**
 * @file
 * Default theme implementation to display a auto grid layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 */
#}
{%
  set classes = [
    'layout',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div {{ region_attributes.content.addClass('layout__region', 'layout__region--content ec-autogrid-25-25-50') }}>{{ content.content }}</div>
  </div>
{% endif %}
